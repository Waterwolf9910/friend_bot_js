{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": [
                "yarn tsc",
                // "echo Building Web Assests... &&",
                // "yarn webpack build --color",
            ],
            // "command": [
            //     "./build.sh"
            // ],
            // "windows": {
            //     "command": "./build.bat"
            // },
            "options": {
                "env": {
                    "MODE": "p"
                }
            },
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Test Build",
            "type": "shell",
            "command": [
                "yarn",
                "tsc"
                // "echo Building Web Assests... &&",
                // "yarn webpack build --color &&",
            ],
            "problemMatcher": [
                "$tsc"
            ],
            "options": {
                "env": {
                    "MODE": "d"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        },
        {
            "label": "Build Script File",
            "type": "shell",
            "command": [
                "yarn tsc build.ts"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
    ]
}
