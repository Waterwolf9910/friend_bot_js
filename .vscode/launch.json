{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "vscode-edge-devtools.debug",
            "request": "launch",
            "name": "Launch Browser",
            "useHttps": false,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/static_src/js"
        },
        {
            "name": "Launch Edge (external)",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost/friend_bot",
            "cwd": "${workspaceFolder}/debug/web",
            "userDataDir": true,
            "includeDefaultArgs": true,
            "includeLaunchArgs": true,
            "runtimeArgs": [
                // "--user-data-dir=\"${workspaceFolder}/debug/browser\""
            ],
            "webRoot": "${workspaceFolder}/static_src/"
        },
        {
            "name": "Launch Chrome (external)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "includeDefaultArgs": true,
            "runtimeArgs": [
                // "--user-data-dir=./debug/browser"
            ],
            "cwd": "${workspaceFolder}/debug/web",
            "userDataDir": true,
            "webRoot": "${workspaceFolder}/static_src/"
        },
        {
            "name": "Launch Bot",
            "request": "launch",
            "type": "node",
            // "profileStartup": true,
            "runtimeArgs": ["--tls-min-v1.2", "--report-uncaught-exception", /* "--prof", "--node-memory-debug", "--heap-prof", "--cpu-prof" */],
            "autoAttachChildProcesses": true,
            "presentation": {
                "hidden": false,
                "group": "Discord Bots",
                "order": 1
            },
            "cwd": "${workspaceFolder}/debug",
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "smartStep": true,
            "cascadeTerminateToConfigurations": [
                "Launch Browser",
                "Launch Edge (external)",
                "Launch Chrome (external)"
            ],
            "outputCapture": "std",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "localRoot": "${workspaceFolder}/build/",
            "preLaunchTask": "npm: prepareDebug",
            "program": "${workspaceFolder}/build/index.js",
            "showAsyncStacks": true,
            "serverReadyAction": {
                "action": "startDebugging",
                "name": "Launch Edge (external)",
                "killOnServerStop": true,
                "pattern": "webpack [.0-9]+ compiled successfully"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/.pnp.cjs",
                "**/.pnp.js",
                "**/yarn.js",
                "**/v35.js",
                "**/get-intrinsic/*.js",
                "**/ytdl-core/lib/*.js",
                "**/libsodium.js"
            ]
        }
    ]
}
